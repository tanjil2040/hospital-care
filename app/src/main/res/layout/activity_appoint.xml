<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".AppointActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Patient Name"/>
        <EditText
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/patientid"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Email :"/>
        <EditText
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/emailid"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="50dp">
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Choose Doctor :"/>
        <Spinner

        android:layout_marginLeft="8dp"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/spinnerid"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Blood Group :"/>
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bgid">
            <RadioButton
                          android:id="@+id/bga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"/>
            <RadioButton
                          android:id="@+id/bgb"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"/>

            <RadioButton
                          android:id="@+id/bgab"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AB"/>
            <RadioButton
                          android:id="@+id/bgo"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Blood Type :"/>
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btid">
            <RadioButton
                         android:id="@+id/btp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Positive"/>
            <RadioButton
                         android:id="@+id/btn"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Negetive"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Gender :"/>
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/genderid">
            <RadioButton
                          android:id="@+id/gmale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"/>
            <RadioButton
                    android:id="@+id/gfemale"      
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Contact Number :"/>
        <EditText
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/contactid"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">
        <Button
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Date of birth :"
            android:id="@+id/dobbutton"/>
        <EditText
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/dobid"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="National ID Number :"/>
        <EditText
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/nid"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">
        <Button
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Choose Date :"
            android:id="@+id/appointdatebuttonid"/>
        <EditText
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/appointdateid"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">
        
        <Button
android:textStyle="bold"
            android:layout_marginLeft="20sp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Save"
            android:id="@+id/saveid"/>
    </LinearLayout>

</LinearLayout>
